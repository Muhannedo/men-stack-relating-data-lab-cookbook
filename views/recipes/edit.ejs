<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit recipe</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <a href="/recipes">Back to Recipes</a>
    <form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" value="<%= recipe.name %>" />
      <br />
      <label for="instructions">instructions:</label>
      <textarea name="instructions" id="instructions" cols="30" rows="10">
<%= recipe.instructions %></textarea
      >
      <br />
      <label for="ingredients">Ingredients:</label>
      <% ingredients.forEach((ingredient) => { %>
      <div>
        <input
          type="checkbox"
          name="ingredients"
          value="<%= ingredient._id %>"
          id="ingredient-<%= ingredient._id %>"
        />
        <label for="ingredient-<%= ingredient._id %>"
          ><%= ingredient.name %> <%= ingredient.quantity%> <%=
          ingredient.unit%></label
        >
      </div>
      <% }); %>

      <br />

      <input type="submit" value="Update Recipe" />
    </form>
    <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST">
      <input type="submit" value="Delete Recipe" />
    </form>
  </body>
</html>
